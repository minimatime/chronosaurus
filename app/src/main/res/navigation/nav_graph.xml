<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.chronosaurus.LoginFragment"
        android:label="@string/login_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_ScheduleFragment"
            app:destination="@+id/ScheduleFragment"/>
    </fragment>
    <fragment
        android:id="@+id/ScheduleFragment"
        android:name="com.example.chronosaurus.ScheduleFragment"
        android:label="@string/semester_schedule"
        tools:layout="@layout/fragment_schedule">

        <action
            android:id="@+id/action_ScheduleFragment_to_FirstFragment"
            app:destination="@+id/FirstFragment"/>
    </fragment>
    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.chronosaurus.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_FirstFragment_to_ScheduleFragment"/>
    </fragment>
    <activity
        android:id="@+id/uploadActivity"
        android:name="com.example.chronosaurus.UploadActivity"
        android:label="activity_upload"
        tools:layout="@layout/activity_upload" />
</navigation>